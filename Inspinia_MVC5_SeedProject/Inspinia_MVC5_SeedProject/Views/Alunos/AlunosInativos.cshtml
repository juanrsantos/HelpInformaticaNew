@model IEnumerable<Inspinia_MVC5_SeedProject.Models.Aluno>

@{
    ViewBag.Title = "AlunosInativos";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-md-3">
        <h2>Alunos Inativos</h2>
    </div>

</div>
<br />
<br />
<br />


<div class="mail-box">



    <table class="table table-striped table-bordered table-hover dataTables-example">
        <thead>
            <tr class="unread">
                <td>Nome </td>
                <td>Data Matricula</td>
                <td>Data Exclusão </td>
                <td>Reativar Aluno</td>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tbody>

                <tr class="unread">
                    <td>@item.Nome</td>
                    <td class="mail-ontact"><a href="mail_detail.html">@item.DataAlteracao</a></td>
                    <td class="mail-subject"><a href="mail_detail.html">@item.DataExclusao</a></td>
                    <td>

                        <label class="switch">


                            <input type="checkbox" name="chkbox" class="demo3" id="@item.AlunoId">
                            <span class="slider round"></span>


                        </label>
                    </td>

                </tr>
            </tbody>

        }

    </table>


</div>






<style>
    .switch {
        position: relative;
        display: inline-block;
        width: 55px;
        height: 32px;
    }

        .switch input {
            display: none;
        }

    .slider {
        position: absolute;
        cursor: pointer;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: #ccc;
        -webkit-transition: .4s;
        transition: .4s;
    }

        .slider:before {
            position: absolute;
            content: "";
            height: 26px;
            width: 26px;
            left: 4px;
            bottom: 4px;
            background-color: white;
            -webkit-transition: .4s;
            transition: .4s;
        }

    input:checked + .slider {
        background-color: #0f74bd;
    }

    input:focus + .slider {
        box-shadow: 0 0 1px #2196F3;
    }

    input:checked + .slider:before {
        -webkit-transform: translateX(23px);
        -ms-transform: translateX(23px);
        transform: translateX(23px);
    }

    /* Rounded sliders */
    .slider.round {
        border-radius: 34px;
    }

        .slider.round:before {
            border-radius: 50%;
        }
</style>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/telasScripts/aluno/aluno.js"></script>
    <script src="~/Scripts/jquery.steps.js"></script>
    <script src="~/Scripts/jquery.steps.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"> </script>




    <script>


        $("input[type=checkbox]").change(function () {
            if ($(this).prop("checked")) {
                swal({
                    title: "Deseja Ativar o Aluno ?",
                    text: "O Aluno encontra desativado, Pressione Ok para ativa-lo !",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                })
.then((willDelete) => {
    if (willDelete) {
        swal("Pronto ! Aluno Ativado com Sucesso", {
            icon: "success",
        });

        var data = {

            idAluno: $(this).attr("id")

        }

        $.ajax({
            type: "POST",
            data: JSON.stringify(data),
            url: "../../Alunos/AtivarAluno",
            contentType: 'application/json; charset=utf-8',
            success: function (result) {
                if (result.success) {

                    setTimeout('location.reload();', 1500);
                   
                }

            }
        })

    } else {
        $(this).prop('checked', false);
    }
});
            } else {
                $(this).val(false);
            }
        });



    </script>
}

@model Inspinia_MVC5_SeedProject.Models.Aluno


@{
    ViewBag.Title = "Excluir";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Deletar</h2>

    </div>
    <div class="col-sm-8">

    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title title-action">
                    <h5 class="text-danger">Deseja Excluir o Aluno (a) :  <span>@Model.Nome</span></></h5>


                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Excluir" class="btn btn-primary" />
                            @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-white" })
                        </div>
                    }

                </div>

                <div class="ibox-content">

                    <table width="45%">

                        <tr>
                            <td colspan="1">
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.Nome)

                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => Model.Nome)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.DataNascimento)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.DataNascimento)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Cpf)
                                    </dt>


                                        <dd>

                                            @Html.DisplayFor(model => model.Cpf)
                                        </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Cep)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Cep)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.tipoLogradouro)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.tipoLogradouro)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Logradouro)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Logradouro)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Cidade)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Cidade)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Estado)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Estado)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Telefone)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Telefone)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Celular)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Celular)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Email)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Email)
                                    </dd>


                                </dl>
                            </td>
                            <td>

                                @if (Model.Foto != null)
                                {
                                    <img alt="image" width="230" height="230" src="@Model.Foto">
                                }
                                else
                                {
                                    <img alt="image" width="230" height="230" src="~/img/logo - Copia.png" />
                                }


                            </td>

                        </tr>

                    </table>


                </div>
            </div>
        </div>
    </div>
</div>




@model IEnumerable<Inspinia_MVC5_SeedProject.Models.Curso>

@{
    ViewBag.Title = "Index";
}

<br />

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Cursos Cadastrados</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.NomeCurso)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Periodo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descricao)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Valor)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NomeCurso)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Periodo)
                                </td>
                                <td width="900">
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Valor)
                                </td>
                              
                                <td width="400">                                 
                                    @Html.ActionLink("Alterar", "Edit", new { id = @item.CursoId }, new { @class = "btn btn-xs btn-warning " }) |
                                    @Html.ActionLink("Detalhes", "Details", new { id = @item.CursoId }, new { @class = "btn btn-xs btn-primary " }) |
                                    @Html.ActionLink("Excluir", "Delete", new { id = @item.CursoId }, new { @class = "btn btn-xs btn-danger " })
                                </td>

                            </tr>

                        }


                    </table>
                    @Html.ActionLink("Novo Curso", "Create", null, new { @class = "btn btn-md btn-primary " })

                </div>
            </div>
        </div>
    </div>
</div>




